@using EmaraDesign1.Services
@inject IManagerProjectsService ManagerProjectsService


@model Project
@{
    ViewData["Title"] = "CreateProject";
}

<form asp-action="SaveNew" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="date"></label>
        <input asp-for="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ClientId"></label>
        <input asp-for="ClientId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="image"></label>
        <input asp-for="image" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>